{
  "name": "rig/wp-demo",
  "description": "A demo WordPress project",
  "type": "project",
  "version": "1.0.0",
  "license": "Public domain",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": [
        "wpackagist-plugin/*",
        "wpackagist-theme/*"
      ]
    },
    {
      "type": "composer",
      "url": "https://wp-languages.github.io"
    },
    {
      "type": "package",
      "package": {
        "name": "advanced-custom-fields/advanced-custom-fields-pro",
        "version": "5.12",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://connect.advancedcustomfields.com/index.php?a=download&p=pro&k={%ACF_KEY}&t=5.12"
        },
        "require": {
          "ffraenz/private-composer-installer": "^5.0"
        }
      }
    }
  ],
  "require": {
    "php": "~8.0.0",
    "composer/installers": "^2",
    "johnpbloch/wordpress": "^5.9",
    "koodimonni/composer-dropin-installer": "^1.3",
    "koodimonni-language/core-fi": "^5.9",
    "advanced-custom-fields/advanced-custom-fields-pro": "^5",
    "wpackagist-plugin/wordpress-seo": "^17",
    "wpackagist-plugin/safe-svg": "^1.9.10",
    "wpackagist-plugin/polylang": "^3.1.4"
  },
  "require-dev": {
    "wpackagist-plugin/fakerpress": "^0.5.2"
  },
  "config": {
    "vendor-dir": "public/vendor",
    "allow-plugins": {
      "composer/installers": true,
      "johnpbloch/wordpress-core": true,
      "johnpbloch/wordpress-core-installer": true,
      "ffraenz/private-composer-installer": true
    }
  },
  "extra": {
    "installer-paths": {
      "public/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "public/app/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "public/app/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "wordpress-install-dir": "public/wp"
  },
  "scripts": {
    "post-install-cmd": [
      "rm -rf ./public/wp/wp-content/themes/*/; rm -rf ./public/wp/wp-content/plugins/*/; rm -rf ./public/wp/wp-content/plugins/hello.php"
    ]
  }
}
